<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    tools:context=".fragments.DiscoveryFragment">
    <LinearLayout
        android:id="@+id/ln_a"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:orientation="horizontal"
        android:background="@drawable/background_tv_show"
        app:layout_constraintTop_toTopOf="parent"
        android:weightSum="10">

        <TextView
            android:id="@+id/a"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_10sdp"
            android:layout_weight="8"
            android:text="NETFLIX"
            android:textColor="@color/red"
            android:textSize="@dimen/_20ssp"
            android:textStyle="bold"
           />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="@dimen/_25sdp"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:src="@drawable/ic_bell" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvTruyenHinh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:text="Khám phá"
        android:textColor="@color/white"
        android:textSize="@dimen/_25ssp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ln_a"
        />
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_tv_show"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:background="@color/black"
        app:tabSelectedTextColor="@color/red"
        app:tabTextColor="@color/white"
        app:tabIndicatorColor="@color/red"
        app:tabTextAppearance="@style/MyTabLayoutTextAppearance"
        app:tabMode="scrollable"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTruyenHinh" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager_tv_show"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tab_tv_show" />
</androidx.constraintlayout.widget.ConstraintLayout>