<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ct_mode_of_payment"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="@dimen/_100sdp"
    android:layout_margin="@dimen/_10sdp"
    android:backgroundTint="@color/gray_search"
    android:background="@drawable/border_background_10sdp">


        <TextView
            android:id="@+id/tv_title_mode_of_payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vietel payment"
            android:textSize="@dimen/_12ssp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginLeft="@dimen/_30sdp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_mode_of_payment"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:layout_marginRight="@dimen/_30sdp"
            android:src="@color/teal_700"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_title_mode_of_payment"
            app:layout_constraintBottom_toBottomOf="@+id/tv_title_mode_of_payment"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
