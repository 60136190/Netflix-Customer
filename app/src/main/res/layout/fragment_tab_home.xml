<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    android:fillViewport="true"
    tools:context=".tab_layout_home.TabHomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:id="@+id/frame_img"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_300sdp"
                app:layout_constraintTop_toTopOf="parent">
                <ImageView
                    android:id="@+id/img_film"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_300sdp"
                    android:scaleType="centerCrop"
                   />
                <com.steelkiwi.library.SlidingSquareLoaderView
                    android:id="@+id/progress_item_add_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_gravity="center"
                    android:visibility="invisible"
                    android:background="@color/black"
                    android:backgroundTint="@color/black"
                    app:sslv_corner_radius="@dimen/_5sdp"
                    app:sslv_margin="@dimen/_3sdp"
                    app:sslv_end_gradient_color="@color/end_gradient_color"
                    app:sslv_start_gradient_color="@color/start_gradient_color"
                    app:sslv_background_color="@color/background"
                    app:sslv_square_size="@dimen/square_size"
                    app:layout_constraintTop_toBottomOf="@+id/card_img_film"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"/>
            </FrameLayout>


            <TextView
                android:id="@+id/tv_title_film"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="dagsudaidsia"
                android:textSize="@dimen/_13ssp"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@+id/frame_img"/>

            <ImageView
                android:id="@+id/img_my_list"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_30sdp"
                android:src="@drawable/ic_add"
                app:tint="@color/white"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_title_film"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My List"
                android:textColor="@color/white"
                android:textSize="@dimen/_10ssp"
                app:layout_constraintLeft_toLeftOf="@+id/img_my_list"
                app:layout_constraintRight_toRightOf="@+id/img_my_list"
                app:layout_constraintTop_toBottomOf="@+id/img_my_list"/>


            <ImageView
                android:id="@+id/img_info"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:src="@drawable/info"
                app:tint="@color/white"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_title_film"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My List"
                android:textColor="@color/white"
                android:textSize="@dimen/_10ssp"
                app:layout_constraintLeft_toLeftOf="@+id/img_info"
                app:layout_constraintRight_toRightOf="@+id/img_info"
                app:layout_constraintTop_toBottomOf="@+id/img_info"/>

            <Button
                android:id="@+id/btn_play"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:backgroundTint="@color/white"
                android:drawableLeft="@drawable/ic_play"
                android:drawableTint="@color/black"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_title_film"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_adult"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_300sdp"
                app:layout_constraintTop_toBottomOf="@+id/btn_play"
                app:layout_constraintBottom_toBottomOf="parent"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_kid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@+id/btn_play"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</ScrollView>