<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_40sdp"
    android:id="@+id/ct_director"
    android:layout_margin="@dimen/_5sdp"
    android:background="@drawable/border_background_5sdp"
    android:backgroundTint="@color/gray_search"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_director"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_3sdp"
        android:layout_marginBottom="@dimen/_3sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/tv_name_of_director"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:textSize="@dimen/_12ssp"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@+id/img_director"
        app:layout_constraintBottom_toBottomOf="@+id/img_director"
        app:layout_constraintLeft_toRightOf="@+id/img_director"/>
</androidx.constraintlayout.widget.ConstraintLayout>